<Window x:Class="POE3.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE3"
        mc:Ignorable="d"
        Title="Filter" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Search by Recipe Name" Width="150" Margin="5" VerticalAlignment="Center"/>
            <TextBox Name="FilterRecipeNameTextBox" Width="150" Margin="5"/>
            <TextBlock Text="Filter by Ingredient" Width="150" Margin="5" VerticalAlignment="Center"/>
            <TextBox Name="FilterIngredientTextBox" Width="150" Margin="5"/>
            <TextBlock Text="Filter by Food Group" Width="150" Margin="5" VerticalAlignment="Center"/>
            <TextBox Name="FilterFoodGroupTextBox" Width="150" Margin="5"/>
            <TextBlock Text="Filter by Max Calories" Width="150" Margin="5" VerticalAlignment="Center"/>
            <TextBox Name="FilterMaxCaloriesTextBox" Width="150" Margin="5"/>
            <Button Content="Apply Filters" Click="ApplyFiltersButton_Click" Width="150" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
